<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {pageTitle: 'Detalle del producto'}) %>

  <body>
    <header><%- include('../partials/navBar') %></header>

    <main>
      <form action="/products/<%=productData.id%>/edit" method="GET">
        <button class="editButton" type="submit">EDITAR</button>
      </form>
      <form action="/products/<%=productData.id%>?_method=DELETE" method="POST">
        <button class="deleteButton" type="submit">ELIMINAR</button>
      </form>
      <section class="product-general">
        <section class="product-preview">
          <div class="product-preview-options">
            <img
              src="/uploads/<%=productData.image%>"
              alt="photoPreview1"
              class="preview-option"
            />
            <img
              src="/uploads/<%=productData.image%>"
              alt="photoPreview2"
              class="preview-option"
            />
            <img
              src="/uploads/<%=productData.image%>"
              alt="photoPreview3"
              class="preview-option"
            />
          </div>
          <div class="product-preview-photo">
            <img
              src="/uploads/<%=productData.image%>"
              alt="photoPreviewPhoto"
            />
          </div>
          <div class="product-preview-details">
            <p class="product-category"><%=productData.category%></p>
            <p class="product-name"><%=productData.name%></p>
            <p class="product-price">$ <%=productData.price%></p>

            <form action="#" class="main-form-product">
              <label for="choice-others">Selecciona un color:</label>
              <select
                name="product-choice-others"
                id="choice-others"
                class="product-choice-others"
              >
                <% if(typeof(productData.color)==="string"){%>

                <option value="<%=productData.color%>">
                  <%=productData.color%>
                </option>

                <%}else{%> <%for(let element of productData.color){%>
                <option value="<%=element%>"><%=element%></option>
                <%}%> // <%}%>
              </select>

              <button type="button" class="add-Cart">AGREGAR AL CARRITO</button>
            </form>
          </div>
        </section>
        <section class="product-general-info">
          <form action="#" class="main-form-general-info">
            <button type="button" class="product_details">DETALLES</button>
            <button type="button" class="technical_Info">INFO TÉCNICA</button>
            <button type="button" class="otherSpecifications">
              ESPECIFICACIÓN
            </button>
            <button type="button" class="reviews">RESEÑAS</button>
          </form>

          <p class="product-general-info-text"><%=productData.description%></p>
        </section>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
