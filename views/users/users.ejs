<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', {pageTitle: 'Todos los productos'}) %>

<body>
  <%- include('../partials/navBar') %>

  <div class=>
    <div class=>
      <div class=>
        <h2 class= "page_title">Todos los usuarios</h2>
      </div>
      <div class= "products-list-box">
      <!-- Aca iteramos el array que llega del controlador -->
      <% for( let i=0; i < users.length; i++ ) { %>
      
        <section class="products-box">
          <a href="/products/<%= users[i].id %>">
            <figure class="products-image-box">
              <img src="/uploads/<%= users[i].image %>" alt="imagen de usuario" />
            </figure>
            <article class="product-data-box">
              <h2><%= users[i].username %></h2>
              <span><%= users[i].ide %></span>
              <p><%= users[i].email%></p>
            </article>
          </a>
        </section>
      
      <% } %>
    </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
</body>

</html>