<!DOCTYPE html>
<html lang="en">

  <%- include('../partials/head', {pageTitle: 'Registro'}) %>

  <body>
    <header>

      <%- include('../partials/navBar') %>

    </header>
    
    <main>
      <section class="main-form">
        <form action="/users" method="POST" enctype="multipart/form-data">
          <div class="form-header">
            <img src="img/logo-2.png" alt="logo 2" />
          </div>

          <section class="user-field">
            <input
              type="text"
              name="Username"
              id="user"
              placeholder="Ingresar usuario"
              minlength="5"
              maxlength="20"
              required
            />
            <label for="user">Ingresar usuario</label>
          </section>
          <section class="email-field">
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Ingresar email"
              required
            />
            <label for="email">Ingresar email</label>
          </section>
          <section class="password-field">
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Ingresar contrase単a"
              minlength="4"
              maxlength="16"
              required
            />
            <label for="password">Ingresar contrase単a</label>
          </section>

          <section class="password-field">
            <input
              type="password"
              name="confirmSignUpPassword"
              id="confirm-password"
              placeholder="Confirmar contrase単a"
              minlength="4"
              maxlength="16"
              required
            />
            <label for="password">Confirmar contrase単a</label>
          </section>

          <section class="avatarImage">
            <input
              type="file"
              name="avatarImg"
              id="avatarImg"
              multiple
            />
          </section>

          <section class="button-submit">
            <button type="submit">REGISTRATE</button>
          </section>

          <section class="social-media-field">
            <label>Registrate usando</label>
            <div class="social-media">
              <div class="social-media-icon">
                <a href="#">
                  <i class="fab fa-facebook-square"></i>
                </a>
              </div>
              <div class="social-media-icon">
                <a href="#">
                  <i class="fab fa-instagram-square"></i>
                </a>
              </div>
              <div class="social-media-icon">
                <a href="#">
                  <i class="fab fa-google-plus-square"></i>
                </a>
              </div>
            </div>
          </section>

          <section class="sign-up-field">
            <span
              >Ingresa presionando
              <a class="sign-in-link" href="/sign_in">Ingresar</a></span
            >
          </section>
        </form>
      </section>
    </main>

    <%- include('../partials/footer') %>

  </body>
</html>
